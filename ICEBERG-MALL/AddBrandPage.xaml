<Page x:Class="ICEBERG_MALL.AddBrandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICEBERG_MALL"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddBrandPage" WindowTitle="Авторизация">

    <Grid  Background="AliceBlue"  >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">Введите название бренда:</TextBlock>
        <TextBox Name="loginBox" Grid.Row="2" MinWidth="250" MaxWidth="400"  Margin="10,5.2,10,0" Height="27" VerticalAlignment="Top">Название</TextBox>
        <WrapPanel Grid.Row="3" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsCancel="True" MinWidth="60">Отмена</Button>
            <Button IsDefault="True"  MinWidth="60" Margin="0,0,10,0" Content="OK"/>
        </WrapPanel>
        <TextBlock Name="textBlockNameMall" Text="ICEBERG MALL" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></TextBlock>
    </Grid>
</Page>

