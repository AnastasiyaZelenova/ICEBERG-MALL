<Page x:Class="ICEBERG_MALL.EditTradePointPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICEBERG_MALL"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="525"
      Title="EditTradePointPage" >
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактировать торговую точку" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Margin="0,0,0,40" ></TextBlock>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Stretch" Margin="80 10" DisplayMemberPath="NameCategory"  Grid.Row="2" VerticalAlignment="Top" Height="20" />
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBox Name="textBoxEditTradePointName" Grid.Row="1" VerticalAlignment="Top" Margin="50 10" TextWrapping="Wrap" />
            <TextBox Name="textBoxEditTradePointDescription" Grid.Row="1" VerticalAlignment="Center" TextWrapping="Wrap" Margin="50 0" Height="80" ></TextBox>
        </StackPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,20,20,0">
            <Button Name="buttonAddTradePointOk" MinWidth="70" MinHeight="30" Margin="5" Content="Редактировать" Click="buttonAddTradePointOk_Click" ></Button>
            <Button Name="buttonAddTradePointCancel" MinHeight="30" Content="Отмена" Margin="5"  MinWidth="70"></Button>

        </WrapPanel>


    </Grid>
</Page>
