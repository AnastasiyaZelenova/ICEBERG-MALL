<Page x:Class="ICEBERG_MALL.PasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICEBERG_MALL"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PasswordPage" WindowTitle="Авторизация">

    <Grid  Background="AliceBlue"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock>Введите логин:</TextBlock>
        <TextBox Name="loginBox" Grid.Row="1" MinWidth="250"  Margin="0,1.2,0,40.4" Grid.RowSpan="2">Логин</TextBox>
        <TextBlock  Grid.Row="2">Введите пароль:</TextBlock>
        <TextBox Name="passwordBox" Grid.Row="3"  MinWidth="250"  Margin="0,0.6,0,0.2">Пароль</TextBox>

        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsCancel="True" MinWidth="60">Отмена</Button>
            <Button IsDefault="True"  MinWidth="60" Margin="0,0,10,0" Content="OK"/>
        </WrapPanel>
    </Grid>
</Page>



