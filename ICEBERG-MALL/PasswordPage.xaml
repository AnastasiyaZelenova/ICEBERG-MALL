<Page x:Class="ICEBERG_MALL.PasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICEBERG_MALL"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="525"
      Title="PasswordPage" Background="AliceBlue">
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition  />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Введите логин:" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox Name="textBoxLogin" Grid.Row="1"  Margin="50,10,50,10" ></TextBox>
        <TextBlock Text="Введите пароль:" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <PasswordBox Name="passwordBox" Grid.Row="3"    Margin="50,10,50,10"></PasswordBox>
        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,20,0">
            <Button  Name="buttonPasswordCancel" MinWidth="60" Margin="10 5" Content="Отмена" ></Button>
            <Button  Name="buttonPassword" MinWidth="60" Margin="10 5" Content="OK" Click="buttonPassword_Click" />
        </WrapPanel>
    </Grid>
</Page>
